---
import HeaderLink from '../home/components/HeaderLink.astro'
import AddressIcon from '../icons/AddressIcon.astro'
import PhoneIcon from '../icons/PhoneIcon.astro'
import EmailIcon from '../icons/EmailIcon.astro'

const footerLinks = [
	{
		name: 'Política de privacidad',
		href: '/politica-de-privacidad'
	},
	{
		name: 'Aviso legal',
		href: '/aviso-legal'
	},
	{
		name: 'Términos y condiciones',
		href: '/tyc'
	}
]

const footerInfo = {
	email: 'gestionbox03@gmail.com',
	phone: '( +34 ) 613 360 034',
	address: 'Calle Sargento Mena 10'
}
---

<footer class="bg-primary-bg-component px-4 py-10 md:py-20">
	<div class="mx-auto max-w-6xl">
		<div class="flex flex-col items-start justify-between gap-y-6 md:flex-row md:gap-y-12">
			<a href="/" class="hoverable mb-6 flex items-center md:mb-0">
				<img class="h-24 md:h-48" src="/public/images/logo.webp" alt="Logo de box03" />
			</a>
			<div class="flex flex-col gap-y-6 md:flex-row md:gap-x-32">
				<div class="flex flex-col gap-y-2">
					{footerLinks.map((link) => <HeaderLink name={link.name} href={link.href} />)}
				</div>
				<div class="flex flex-col gap-y-2">
					<span class="text-md flex flex-row items-center gap-x-2 text-primary-title">
						<EmailIcon />{footerInfo.email}
					</span>
					<span class="text-md flex flex-row items-center gap-x-2 text-primary-title">
						<PhoneIcon />{footerInfo.phone}
					</span>
					<span class="text-md flex flex-row items-center gap-x-2 text-primary-title">
						<AddressIcon class="h-6 w-6" />{footerInfo.address}
					</span>
				</div>
			</div>
		</div>
	</div>
</footer>
