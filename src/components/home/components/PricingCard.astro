---
import TickIcon from "../../icons/TickIcon.astro";

interface IPrincingCardProps {
  name: string;
  description: string;
  isFlagged: boolean;
  periodicity: string;
  price: number;
  available: boolean;
  features: string[];
}

const {
  name,
  description,
  isFlagged,
  periodicity,
  price,
  available,
  features,
} = Astro.props as IPrincingCardProps;
---

<div
  class:list={[
    "rounded-3xl p-8 flex flex-col",
    isFlagged ? "bg-primary-bg-component" : "bg-transparent",
  ]}
>
  <h3 class="text-primary-title">{name}</h3>
  <p class="text-3xl text-primary-title mt-4">
    <span class="text-sm text-primary-title">Desde</span>{price}{" "}<span
      class="text-sm text-primary-text">{periodicity}</span
    >
  </p>
  <p class="text-md text-primary-text mt-4">{description}</p>
  <ul class="mt-6 space-y-6">
    {
      features.map((feature) => (
        <li class="flex gap-3">
          <TickIcon />
          <span class="text-primary-text">{feature}</span>
        </li>
      ))
    }
  </ul>
  <button
    class="contact-button text-primary-text-inverse rounded-full bg-primary-text cursor-pointer hover:bg-primary-title-hovered disabled:cursor-default disabled:hover:bg-primary-text disabled:opacity-25 transition-all duration-250 py-4 px-2 mt-6"
    disabled={!available}
  >
    <a href="#contacto">{available ? "Reservar ahora" : "Agotado"}</a>
  </button>
</div>
