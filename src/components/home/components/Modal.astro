---
const { isOpen, onClose, children } = Astro.props
---

{
	isOpen && (
		<div class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50">
			<div class="rounded-lg bg-white p-6 shadow-lg">
				{children}
				<button onClick={onClose} class="mt-4 rounded bg-red-500 px-4 py-2 text-white">
					Close
				</button>
			</div>
		</div>
	)
}
export defult Modal