---
const { serviceNo, title, description } = Astro.props;
---

<div
  id={`service-${serviceNo}`}
  class='flex flex-col gap-12 py-8 px-6 opacity-0 rotate-45 -translate-x-[250px]
  rounded-2xl bg-primary-bg-component hover:shadow-lg hover:-translate-y-2 transition-all duration-300 ease-in-out'
>
  <span>0{serviceNo}</span>
  <div class='flex flex-col gap-y-4'>
    <h4 class='text-xl'>{title}</h4>
    <p>
      {description}
    </p>
  </div>
</div>
