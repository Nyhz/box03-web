---
import Button from '../home/components/Button.astro'
import MapIcon from '../icons/MapIcon.astro'
import SpaceIcon from '../icons/SpaceIcon.astro'
import PrivateIcon from '../icons/PrivateIcon.astro'
---


<section class='mx-auto max-w-6xl px-4 py-0 md:py-16'>
    <div class='flex flex-col gap-x-6 gap-y-6 py-16 md:flex-row md:py-12'>
        <div class="w-1/2 animate-fade-right">
            <img src="/images/hero-contact.jpg" alt="Hero" class="w-full h-full object-cover rounded-lg" />
        </div>
        <div class="flex flex-col gap-y-12 w-1/2">
            <h2 class="text-4xl md:text-5xl text-primary-title animate-fade-left">¿Estás decidido a <span class="text-primary-accent">alquilar</span> con nosotros?</h2>
            <h2 class="text-4xl md:text-5xl text-primary-title animate-fade-right animate-delay-[1000ms]">¿Necesitas más información?</h2>
            <p class="text-2xl text-primary-text mt-4 md:mt-6 flex animate-fade-left animate-delay-[2000ms]">Estamos a tu disposición</p>
        </div>
    </div>
</section>


